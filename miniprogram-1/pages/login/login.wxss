/* pages/login/login.wxss */
.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  margin-bottom: 60rpx;
  margin-top: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.form {
  width: 100%;
}

.form-item {
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 20rpx 0;
}

.form-item input {
  font-size: 32rpx;
}

.error-message {
  color: #ff4d4f;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.login-btn {
  background-color: #1aad19;
  color: #fff;
  font-weight: bold;
  margin-top: 30rpx;
}

.register-link {
  margin-top: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.link {
  color: #1aad19;
  margin-left: 10rpx;
} 