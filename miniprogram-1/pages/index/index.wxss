/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f8f9fa;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: #999;
}

.welcome-container {
  margin: 40rpx 0;
  text-align: center;
}

.welcome-text {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
}

.user-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.user-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}

.avatar-container {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  text-align: center;
}

.username {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 600;
}

.nickname {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.action-list {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.action-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
  color: #666;
}

.action-item:last-child {
  border-bottom: none;
}

.schedule-entry {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  margin: 10rpx 0;
  transition: all 0.3s ease;
}

.schedule-entry:active {
  background-color: #f1f3f5;
  transform: scale(0.98);
}

.schedule-icon {
  margin-right: 20rpx;
  font-size: 40rpx;
  color: #7B68EE;
}

.schedule-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.logout-btn {
  margin-top: 40rpx;
  background: linear-gradient(135deg, #ff6b6b, #ff5252);
  color: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 20rpx 0;
  border: none;
  transition: all 0.3s ease;
}

.logout-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

/* 页面容器 */
.page-container {
  padding: var(--spacing-md);
  background: var(--background-secondary);
  min-height: 100vh;
}

/* 用户卡片 */
.user-card {
  background: var(--background-primary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-normal);
  position: relative;
  overflow: hidden;
}

.user-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  opacity: 0.1;
}

.user-info {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: var(--spacing-md);
  border: 4rpx solid var(--background-primary);
  box-shadow: var(--shadow-sm);
}

.user-details {
  flex: 1;
}

.username {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.user-id {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}

.welcome-text {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  line-height: var(--line-height-loose);
  margin-bottom: var(--spacing-lg);
}

/* 功能区域 */
.action-section {
  margin-bottom: var(--spacing-lg);
}

.section-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-md);
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 8rpx;
  height: 32rpx;
  background: var(--primary-color);
  border-radius: var(--radius-sm);
  margin-right: var(--spacing-sm);
}

.action-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--spacing-md);
}

.action-item {
  background: var(--background-primary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-normal);
}

.action-item:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-md);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: var(--spacing-sm);
  color: var(--primary-color);
}

.action-text {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

/* 待办事项入口 */
.schedule-entry {
  background: var(--background-primary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-normal);
}

.schedule-entry:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-md);
}

.schedule-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-sm);
}

.schedule-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
}

.schedule-count {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}

.schedule-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.schedule-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-sm);
  border-radius: var(--radius-md);
  background: var(--background-secondary);
}

.schedule-item-text {
  flex: 1;
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin-right: var(--spacing-sm);
}

.schedule-item-priority {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.priority-high {
  background: var(--danger-color);
}

.priority-medium {
  background: var(--warning-color);
}

.priority-low {
  background: var(--success-color);
}

/* 退出登录按钮 */
.logout-btn {
  background: var(--background-primary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--danger-color);
  font-size: var(--font-size-md);
  font-weight: 500;
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-normal);
}

.logout-btn:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-md);
  background: var(--background-secondary);
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.user-card {
  animation: fadeIn 0.3s ease-out;
}

.action-item {
  animation: fadeIn 0.3s ease-out;
  animation-fill-mode: both;
}

.action-item:nth-child(1) {
  animation-delay: 0.1s;
}

.action-item:nth-child(2) {
  animation-delay: 0.2s;
}

.action-item:nth-child(3) {
  animation-delay: 0.3s;
}

.action-item:nth-child(4) {
  animation-delay: 0.4s;
}
